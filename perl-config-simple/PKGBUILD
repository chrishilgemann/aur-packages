### time to promptly respond to direct emails.
### If you have found a problem with the package/PKGBUILD (as opposed to
### the software) then please do email me or post an AUR comment.

pkgname=perl-warnings-unused
pkgver=0.04
pkgrel=1
pkgdesc="Produces warnings when unused variables are detected"
url="http://search.cpan.org/~gfuji/warnings-unused/"
depends=('perl')
arch=('i686' 'x86_64')
license=('GPL')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/G/GF/GFUJI/warnings-unused-$pkgver.tar.gz") 
md5sums=('5ec13c2f8e9fec152c53ef2e9e431179')

build() {
  cd $srcdir/warnings-unused-$pkgver

  eval `perl -V:archname`

  /usr/bin/perl Makefile.PL \
      INSTALLARCHLIB=/usr/lib/perl5/${archname} \
      INSTALLSITELIB=/usr/lib/perl5/site_perl \
      INSTALLSITEARCH=/usr/lib/perl5/site_perl/${archname}

  /usr/bin/make -j1
}

package() {
  cd  $srcdir/warnings-unused-$pkgver

  /usr/bin/make DESTDIR="$pkgdir" install
  /usr/bin/find $pkgdir -name '.packlist' -print0 | xargs -0 rm -f
  /usr/bin/find $pkgdir -name '*.pod' -print0 | xargs -0 rm -f
}

