# Maintainer: Phillip Smith <fukawi2@NO-SPAM.gmail.com>
# http://github.com/fukawi2/aur-packages

pkgname=arrayprobe
pkgver=2.0
pkgrel=1
pkgdesc="Utility that reports the status of a HP (compaq) arraycontroller. This version only supports the newer controllers that use the cciss driver."
arch=('i686' 'x86_64')
license=('GPL')
#depends=(openssl)
url="http://www.strocamp.net/opensource/arrayprobe.php"
source=("http://www.strocamp.net/opensource/compaq/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('7300f24a712265fd7430c6b48bd1dd75')

build() {
	cd $srcdir/$pkgname-$pkgver

	./configure --prefix=/usr || return 1

	make || return 1
}

package() {
	cd $srcdir/$pkgname-$pkgver

	make DESTDIR=$pkgdir install || return 1
}

# vim:set ts=2 sw=2 et:
