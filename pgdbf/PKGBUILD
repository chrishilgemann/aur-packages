# Maintainer: Phillip Smith <fukawi2@NO-SPAM.gmail.com>
# http://github.com/fukawi2/aur-packages

pkgname=pgdbf
pkgver=0.5.4
pkgrel=1
pkgdesc="Convert XBase databases - particularly FoxPro tables with memo files - into a format that PostgreSQL can directly import"
arch=('i686' 'x86_64')
license=('GPLv3')
url="http://pgdbf.sourceforge.net/"
#depends=("postgresql-libs>=$pkgver" "libxml2" 'readline>=6.0')
#options=('!makeflags')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('dd331ce61f4afc6ea4d1da89f0357408')

build() {
  cd $srcdir/$pkgname-$pkgver

  # configure
  ./configure --prefix=/usr \
    --enable-installdocs
  
  # build
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}
# vim:set ts=2 sw=2 et:
